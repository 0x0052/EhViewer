<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/rating_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <com.hippo.ehviewer.widget.RatingView
        xmlns:auto="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        auto:starSize="48dp"
        auto:starInterval="8dp"
        auto:starCount="5"
        auto:isIndicator="true"
        auto:max="5"/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/favorite"
                android:drawablePadding="8dp"/>

            <TextView
                android:id="@+id/torrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:gravity="center_horizontal"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/ic_water_pump_theme_primary"/>

            <TextView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:gravity="center_horizontal"
                android:text="@string/share"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/ic_share_theme_primary"/>

            <TextView
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:gravity="center_horizontal"
                android:text="@string/rate"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/ic_thumbs_up_down_theme_primary"/>

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>
