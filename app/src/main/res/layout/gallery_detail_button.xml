<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <include
        layout="@layout/gallery_detail_button_background"/>

    <com.hippo.widget.CardLinearLayout
        android:id="@+id/action_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/keyline_margin_horizontal"
        android:layout_marginRight="@dimen/keyline_margin_horizontal"
        android:orientation="horizontal"
        auto:cardElevation="4dp">

        <TextView
            android:id="@+id/download"
            style="@style/ButtonInCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/download"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider_light"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/read"
            style="@style/ButtonInCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/theme_accent"
            android:text="@string/read"/>

    </com.hippo.widget.CardLinearLayout>

</FrameLayout>