<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hippo.ehviewer.widget.CategoryTable
        android:id="@+id/search_category_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/search_item_interval"/>

    <CheckBox
        android:id="@+id/search_specify_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/search_item_interval"
        android:text="@string/search_specify_author"/>

    <com.hippo.widget.FloatLabelEditText
        xmlns:auto="http://schemas.android.com/apk/res-auto"
        android:id="@+id/search_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/search_item_interval"
        android:hint="@string/search_hint_no_keyword"
        android:singleLine="true"
        auto:labelHint="@string/keyword"
        auto:labelAppearance="@style/TextAppearance.FloatLabelEditText.Lable"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/search_enable_advance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/search_enable_advance"/>

</LinearLayout>
