<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/key_margin">

  <com.hippo.ehviewer.widget.CoverView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cover"
    android:layout_width="80dp"
    android:layout_height="120dp"
    app:placeholderImage="?attr/imagePlaceHolder"/>

  <TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="8dp"
    android:layout_toRightOf="@id/cover"
    style="@style/GalleryList.Item.Detail.Title"
    tools:text="Title"/>

  <com.hippo.ehviewer.widget.AutoHideTextView
    android:id="@+id/uploader"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@id/title"
    android:layout_below="@id/title"
    android:layout_marginTop="2dp"
    style="@style/GalleryList.Item.Detail.Uploader"
    tools:text="Uploader"/>

  <com.hippo.ehviewer.widget.SmallRatingView
    android:id="@+id/rating"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@id/title"
    android:layout_below="@id/uploader"
    android:layout_marginTop="2dp"/>

  <TextView
    android:id="@+id/category"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@id/title"
    android:layout_alignBottom="@id/cover"
    android:paddingBottom="2dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="2dp"
    style="@style/GalleryList.Item.Detail.Category"
    tools:text="Category"/>

  <TextView
    android:id="@+id/date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@id/cover"
    android:layout_alignParentRight="true"
    style="@style/GalleryList.Item.Detail.Date"
    tools:text="Date"/>

  <com.hippo.ehviewer.widget.AutoHideTextView
    android:id="@+id/language"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@id/date"
    android:layout_alignParentRight="true"
    style="@style/GalleryList.Item.Detail.Language"
    tools:text="Language"/>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@id/language"
    android:layout_alignParentRight="true"
    android:orientation="horizontal">

    <ImageView
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:id="@+id/favourite"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/v_heart_x14"/>

    <ImageView
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:id="@+id/download"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/v_download_x14"/>

    <ImageView
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:id="@+id/invalid"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/v_cancel_x14"/>

  </LinearLayout>

  <com.hippo.ehviewer.widget.AutoHideTextView
    android:id="@+id/note"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_below="@id/cover"
    android:layout_marginTop="8dp"
    style="@style/GalleryList.Item.Detail.Note"/>

</RelativeLayout>
