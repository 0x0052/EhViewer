<com.hippo.ehviewer.widget.ehv.EhvDetailHeader
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/header"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <com.hippo.ehviewer.widget.ehv.EhvDetailPants
    android:id="@+id/pants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/key_margin">

    <com.hippo.ehviewer.widget.ehv.EhvCover
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:id="@+id/cover"
      android:layout_width="120dp"
      android:layout_height="180dp"
      app:placeholderDrawable="?attr/backgroundColorStatusBar"
      app:actualScaleType="centerInside"/>

    <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_marginLeft="@dimen/key_margin"
      android:layout_toRightOf="@id/cover"
      android:textColor="@color/primary_text_dark"
      android:textSize="@dimen/text_little_large"
      android:ellipsize="end"
      android:maxLines="3"/>

    <TextView
      android:id="@+id/uploader"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@id/title"
      android:layout_below="@id/title"
      android:layout_marginTop="8dp"
      android:textColor="@color/secondary_text_dark"
      android:textSize="@dimen/text_little_small"
      android:maxLines="1"
      android:ellipsize="end"/>

    <LinearLayout
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@id/cover"
      android:layout_alignLeft="@+id/title"
      android:orientation="horizontal">

      <ImageView
        android:id="@+id/download"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="36dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/download_accent_x24"/>

      <ImageView
        android:id="@+id/read"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/key_margin"
        android:minHeight="36dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/book_open_dark_x24"/>

    </LinearLayout>
  </com.hippo.ehviewer.widget.ehv.EhvDetailPants>

  <View
    android:id="@+id/mask"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:background="?attr/colorPrimary"/>

  <View
    android:id="@+id/toolbar_status_bar"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="?attr/colorPrimaryDark"/>

  <com.hippo.ehviewer.widget.ehv.EhvToolbar
    android:id="@+id/toolbar"
    android:layout_height="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_below="@id/toolbar_status_bar"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <View
    android:id="@+id/shadow"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_shadow"
    android:background="@drawable/strip_shadow_bottom"/>

</com.hippo.ehviewer.widget.ehv.EhvDetailHeader>
