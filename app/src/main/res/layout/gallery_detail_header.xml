<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <!-- Background -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
      android:id="@+id/header_background"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?attr/colorPrimary"/>

    <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/strip_shadow_size"
      android:background="@drawable/strip_shadow_bottom"/>

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/key_margin">

    <!-- Header -->
    <RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <com.hippo.ehviewer.widget.CoverView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cover"
        android:layout_width="128dp"
        android:layout_height="192dp"
        app:placeholderImage="?attr/imagePlaceHolder"
        app:actualImageScaleType="fitCenter"/>

      <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cover"
        android:layout_alignTop="@id/cover"
        android:layout_marginLeft="@dimen/key_margin"
        android:layout_marginRight="@dimen/key_margin"
        android:textColor="?attr/textColorPrimaryDark"
        android:textSize="@dimen/text_little_large"
        android:maxLines="5"
        android:ellipsize="end"/>

      <TextView
        android:id="@+id/uploader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title"
        android:layout_marginTop="8dp"
        android:textColor="?attr/textColorSecondaryDark"
        android:textSize="@dimen/text_little_small"
        android:maxLines="1"
        android:ellipsize="end"/>

      <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/title"
        android:layout_alignBottom="@id/cover"
        android:background="@android:color/white"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAllCaps="true"
        android:textStyle="bold"/>

    </RelativeLayout>

    <!-- Buttons -->
    <LinearLayout
      android:id="@+id/header_buttons"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/key_margin"
      android:orientation="horizontal"
      android:background="?attr/cardBackground">

      <Button
        android:id="@+id/download"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/gallery_detail_download"
        style="?attr/buttonBarButtonStyle"/>

      <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="?attr/dividerColor"/>

      <Button
        android:id="@+id/read"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/gallery_detail_read"
        style="?attr/buttonBarButtonStyle"/>

    </LinearLayout>
  </LinearLayout>
</FrameLayout>
