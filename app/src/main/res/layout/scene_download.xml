<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tip"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <com.hippo.widget.SimpleImageView
            android:layout_width="168dp"
            android:layout_height="168dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_emoticon_neutral_x168"/>

        <TextView
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/keyline_margin"
            android:paddingBottom="@dimen/keyline_margin"
            android:text="@string/download_list_empty"/>

    </LinearLayout>

    <com.hippo.widget.recyclerview.MonoRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        auto:space="@dimen/search_layout_space"
        auto:spaceLeft="@dimen/search_layout_space_horizontal"
        auto:spaceRight="@dimen/search_layout_space_horizontal"/>

    <com.hippo.widget.FabLayout
        android:id="@+id/fab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|right"
        android:gravity="right|bottom"
        android:paddingRight="@dimen/corner_fab_padding_right"
        android:paddingBottom="@dimen/corner_fab_padding_bottom">

        <com.hippo.widget.FloatingActionButton
            style="@style/FloatingActionButton.ForceNoElevation.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            auto:color="?attr/colorPrimary"
            auto:drawable="@drawable/ic_play_dark_x24"
            auto:forceNoElevation="true"/>

        <com.hippo.widget.FloatingActionButton
            style="@style/FloatingActionButton.ForceNoElevation.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            auto:color="?attr/colorPrimary"
            auto:drawable="@drawable/ic_pause_dark_x24"
            auto:forceNoElevation="true"/>

        <com.hippo.widget.FloatingActionButton
            style="@style/FloatingActionButton.ForceNoElevation.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            auto:color="?attr/colorPrimary"
            auto:drawable="@drawable/ic_close_dark_x24"
            auto:forceNoElevation="true"/>

        <com.hippo.widget.FloatingActionButton
            style="@style/FloatingActionButton.ForceNoElevation.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            auto:color="?attr/colorPrimary"
            auto:drawable="@drawable/ic_folder_move_dark_x24"
            auto:forceNoElevation="true"/>

        <com.hippo.widget.FloatingActionButton
            style="@style/FloatingActionButton.ForceNoElevation.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            auto:color="?attr/colorPrimary"
            auto:drawable="@drawable/ic_check_all_dark_x24"
            auto:forceNoElevation="true"/>

        <com.hippo.widget.FloatingActionButton
            style="@style/FloatingActionButton.ForceNoElevation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            auto:color="?attr/colorAccent"
            auto:forceNoElevation="true"
            auto:drawable="@drawable/ic_close_dark_x24"/>

    </com.hippo.widget.FabLayout>

</FrameLayout>
