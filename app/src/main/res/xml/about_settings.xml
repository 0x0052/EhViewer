<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:key="author"
        android:title="@string/settings_about_author_title"/>

    <Preference
        android:key="google_plus"
        android:title="@string/settings_about_google_plus_title"/>

    <Preference
        android:key="website"
        android:title="@string/settings_about_website_title"/>

    <Preference
        android:key="source"
        android:title="@string/settings_about_source_title"/>

    <Preference
        android:key="changelog"
        android:title="@string/settings_about_changelog_title"/>

    <Preference
        android:key="license"
        android:title="@string/settings_about_license_title"/>

    <Preference
        android:key="donate"
        android:title="@string/settings_about_donate"/>

    <com.hippo.preference.FixedSwitchPreference
        style="?android:attr/preferenceStyle"
        android:widgetLayout="@layout/preference_widget_fixed_switch"
        android:key="enable_analytics"
        android:title="@string/settings_about_enable_analytics"
        android:defaultValue="true"/>

    <com.hippo.preference.SimpleDialogPreference
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="?android:attr/preferenceStyle"
        android:key="about_analytics"
        android:title="@string/settings_about_about_analytics"
        app:message="@string/analytics_explain"/>

</PreferenceScreen>
