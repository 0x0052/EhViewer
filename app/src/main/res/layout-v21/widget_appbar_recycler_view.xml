<merge
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_height"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_medium"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <com.hippo.widget.SimpleImageView
            android:id="@+id/plus"
            android:layout_width="@dimen/appbar_height"
            android:layout_height="@dimen/appbar_height"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/appbar_icon_margin"
            android:src="@drawable/ic_plus_dark_x24"/>

        <com.hippo.widget.SimpleImageView
            android:id="@+id/settings"
            android:layout_width="@dimen/appbar_height"
            android:layout_height="@dimen/appbar_height"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/appbar_icon_margin"
            android:src="@drawable/ic_settings_dark_x24"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.hippo.widget.recyclerview.EasyRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

</merge>
