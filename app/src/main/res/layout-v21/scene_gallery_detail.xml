<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/detail_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="280dp"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp">

                    <TableRow>

                        <TextView
                            android:id="@+id/language"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:singleLine="true"/>

                        <TextView
                            android:id="@+id/pages"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"/>

                        <TextView
                            android:id="@+id/size"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:singleLine="true"/>

                    </TableRow>

                    <TableRow
                        android:paddingTop="8dp">

                        <TextView
                            android:id="@+id/posted"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:singleLine="true"/>

                        <TextView
                            android:id="@+id/resize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"/>

                        <TextView
                            android:id="@+id/favoredTimes"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:singleLine="true"/>

                    </TableRow>

                </TableLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="@string/more_information"
                    android:textColor="@color/theme_accent"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="@dimen/keyline_margin"
                    android:layout_marginRight="@dimen/keyline_margin"
                    android:background="@color/divider_light"/>

                <TextSwitcher
                    android:id="@+id/rating_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:inAnimation="@anim/fade_in"
                    android:outAnimation="@anim/fade_out"/>

                <com.hippo.ehviewer.widget.RatingView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    auto:starSize="48dp"
                    auto:starInterval="8dp"
                    auto:starCount="5"
                    auto:isIndicator="true"
                    auto:max="5"
                    auto:rating="3.7"/>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/favorite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/favorite"/>

                        <TextView
                            android:id="@+id/torrent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:gravity="center_horizontal"
                            android:text="@string/torrent"
                            tools:ignore="RtlHardcoded"/>

                        <TextView
                            android:id="@+id/share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:gravity="center_horizontal"
                            android:text="@string/share"
                            tools:ignore="RtlHardcoded"/>

                        <TextView
                            android:id="@+id/rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:gravity="center_horizontal"
                            android:text="Rate"
                            tools:ignore="RtlHardcoded"/>

                    </LinearLayout>

                </HorizontalScrollView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="@dimen/keyline_margin"
                    android:layout_marginRight="@dimen/keyline_margin"
                    android:background="@color/divider_light"/>

                <LinearLayout
                    android:id="@+id/tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:paddingTop="16dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="@dimen/keyline_margin"
                    android:layout_marginRight="@dimen/keyline_margin"
                    android:background="@color/divider_light"/>

                <LinearLayout
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:id="@+id/comment_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/theme_accent"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="@dimen/keyline_margin"
                    android:layout_marginRight="@dimen/keyline_margin"
                    android:background="@color/divider_light"/>

            </LinearLayout>

            <!-- Header -->
            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/theme_primary"
                android:elevation="4dp">

                <com.hippo.ehviewer.widget.LoadImageView
                    android:id="@+id/thumb"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="@dimen/keyline_margin"
                    android:layout_marginTop="@dimen/keyline_margin"
                    android:layout_marginBottom="42dp"
                    tools:ignore="RtlHardcoded"/>

                <TextView
                    android:id="@+id/title"
                    style="@style/Text.Gallery.Detail.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/thumb"
                    android:layout_alignTop="@id/thumb"
                    android:layout_marginLeft="@dimen/keyline_margin"
                    android:layout_marginRight="@dimen/keyline_margin"
                    tools:ignore="RtlHardcoded"/>

                <TextView
                    android:id="@+id/uploader"
                    style="@style/Text.Gallery.Detail.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/title"
                    android:layout_below="@id/title"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="@dimen/keyline_margin"
                    tools:ignore="RtlHardcoded"/>

                <TextView
                    android:id="@+id/category"
                    style="@style/CardMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/title"
                    android:layout_below="@id/uploader"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="@dimen/keyline_margin"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:background="@android:color/white"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded"/>

            </RelativeLayout>

            <!-- ActionCard -->
            <com.hippo.widget.CardLinearLayout
                android:id="@+id/action_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/keyline_margin"
                android:layout_marginRight="@dimen/keyline_margin"
                android:orientation="horizontal"
                android:layout_marginTop="212dp"
                android:layout_marginBottom="8dp"
                auto:cardElevation="4dp">

                <TextView
                    android:id="@+id/download"
                    style="@style/ButtonInCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/download"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider_light"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/read"
                    style="@style/ButtonInCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/theme_accent"
                    android:text="@string/read"/>

            </com.hippo.widget.CardLinearLayout>

        </FrameLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</FrameLayout>






