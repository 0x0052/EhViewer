<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/teal_500</item>
    <item name="colorPrimaryDark">@color/teal_700</item>
    <item name="colorAccent">@color/red_a200</item>

    <item name="colorControlHighlight">@color/ripple_light</item>

    <item name="drawableColorPrimary">@color/primary_drawable_light</item>
    <item name="drawableColorSecondary">@color/secondary_drawable_light</item>

    <item name="backgroundColorStatusBar">@color/background_status_bar_light</item>
    <item name="backgroundColorAppBar">@color/background_app_bar_light</item>
    <item name="backgroundColorWindow">@color/background_window_light</item>
    <item name="backgroundColorContent">@color/background_content_light</item>

    <item name="dividerColor">@color/divider_light</item>

    <item name="clickableBackground">@drawable/clickable_background_light</item>
    <item name="clickableForeground">?attr/clickableBackground</item>

    <item name="android:listDivider">@drawable/list_divider_light</item>
    <item name="android:windowBackground">?attr/backgroundColorWindow</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowContentOverlay">@null</item>
  </style>

  <style name="AppTheme.Ehv" parent="AppTheme.NoActionBar"/>

</resources>
