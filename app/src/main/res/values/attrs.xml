<resources>

  <declare-styleable name="Theme">
    <attr name="drawableColorPrimary" format="color"/>
    <attr name="drawableColorSecondary" format="color"/>

    <attr name="backgroundColorStatusBar" format="color"/>
    <attr name="backgroundColorAppBar" format="color"/>
    <attr name="backgroundColorWindow" format="color"/>
    <attr name="backgroundColorContent" format="color"/>

    <attr name="dividerColor" format="color"/>

    <attr name="clickableBackground" format="reference"/>
    <attr name="clickableForeground" format="reference"/>
  </declare-styleable>

  <declare-styleable name="ProgressView">
    <attr name="color" format="color"/>
    <attr name="indeterminate" format="boolean"/>
    <attr name="progress" format="integer"/>
  </declare-styleable>

  <declare-styleable name="NoiView">
    <attr name="placeholderDrawable" format="reference|color"/>
    <attr name="failureDrawable" format="reference|color"/>
    <attr name="placeholderScaleType" format="enum">
      <enum name="none" value="0"/>
      <enum name="fitCenter" value="1"/>
      <enum name="centerCrop" value="2"/>
    </attr>
    <attr name="actualScaleType" format="enum">
      <enum name="none" value="0"/>
      <enum name="fitCenter" value="1"/>
      <enum name="centerCrop" value="2"/>
    </attr>
    <attr name="failureScaleType" format="enum">
      <enum name="none" value="0"/>
      <enum name="fitCenter" value="1"/>
      <enum name="centerCrop" value="2"/>
    </attr>
    <attr name="aspectRatio" format="float"/>
    <attr name="enableProgress" format="boolean"/>
    <attr name="enableFade" format="boolean"/>
    <attr name="drawable" format="reference|color"/>
    <attr name="uri" format="string"/>
  </declare-styleable>

</resources>
