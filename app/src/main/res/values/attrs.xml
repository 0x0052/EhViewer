<resources>

    <declare-styleable name="ProgressView">
        <attr name="color"/>
        <attr name="indeterminate" format="boolean"/>
        <attr name="progress" format="float"/>
    </declare-styleable>

    <declare-styleable name="MaxSizeContainer">
        <attr name="maxWidth" format="dimension"/>
        <attr name="maxHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="FixedAspectImageView">
        <attr name="aspect" format="float"/>
    </declare-styleable>

    <declare-styleable name="LoadImageView">
        <attr name="retryType">
            <enum name="none" value="0" />
            <enum name="click" value="1" />
            <enum name="longClick" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="FitPaddingLayout">
        <attr name="fitTop1" format="reference"/>
        <attr name="fitTop2" format="reference"/>
        <attr name="fitTop3" format="reference"/>
        <attr name="content1" format="reference"/>
        <attr name="content2" format="reference"/>
        <attr name="content3" format="reference"/>
        <attr name="fitBottom1" format="reference"/>
        <attr name="fitBottom2" format="reference"/>
        <attr name="fitBottom3" format="reference"/>
        <attr name="once" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CheckTextView">
        <attr name="maskColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="DividerView">
        <attr name="dividerWidth" format="dimension"/>
        <attr name="dividerHeight" format="dimension"/>
        <attr name="dividerColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="AutoWrapLayout">
        <attr name="alignment">
            <enum name="top" value="0" />
            <enum name="center" value="1" />
            <enum name="bottom" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SimpleGridLayout">
        <attr name="columnCount" format="integer"/>
        <attr name="itemMargin" format="dimension"/>
    </declare-styleable>

</resources>
