<resources>

    <declare-styleable name="FixedAspectImageView">
        <attr name="aspect" format="float"/>
    </declare-styleable>

    <declare-styleable name="FixedAspectLayout">
        <attr name="aspect"/>
    </declare-styleable>

    <declare-styleable name="FloatingActionButton">
        <attr name="color"/>
        <attr name="drawable"/>
        <attr name="forceNoElevation"/>
    </declare-styleable>

    <declare-styleable name="FloatLabelEditText">
        <attr name="labelAppearance" format="reference"/>
        <attr name="labelHint" format="string"/>
        <attr name="trigger" format="enum">
            <enum name="text" value="0"/>
            <enum name="focus" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="MonoRecyclerView">
        <attr name="space" format="dimension"/>
        <attr name="spaceLeft" format="dimension"/>
        <attr name="spaceRight" format="dimension"/>
        <attr name="spaceTop" format="dimension"/>
        <attr name="spaceBottom" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="StatusBarLayout">
        <attr name="statusBarColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="Snackbar">
        <attr name="message" format="string"/>
    </declare-styleable>

</resources>
