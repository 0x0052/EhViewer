<resources>

  <style name="ProgressView">
    <item name="color">?attr/colorAccent</item>
    <item name="indeterminate">true</item>
    <item name="android:minWidth">48dp</item>
    <item name="android:minHeight">48dp</item>
  </style>

  <style name="ProgressView.Small">
    <item name="android:minWidth">16dp</item>
    <item name="android:minHeight">16dp</item>
  </style>

  <style name="ProgressView.Large">
    <item name="android:minWidth">76dp</item>
    <item name="android:minHeight">76dp</item>
  </style>

  <style name="Ehv"/>

  <style name="Ehv.GalleryDetail"/>

  <style name="Ehv.GalleryDetail.Info"/>

  <style name="Ehv.GalleryDetail.Info.Key">
    <item name="android:textSize">@dimen/text_small</item>
    <item name="android:textColor">?android:attr/textColorSecondary</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Ehv.GalleryDetail.Info.Value">
    <item name="android:textSize">@dimen/text_small</item>
    <item name="android:textColor">?android:attr/textColorPrimary</item>
  </style>

  <style name="Ehv.GalleryDetail.Tags"/>

  <style name="Ehv.GalleryDetail.Tags.Namespace">
    <item name="android:paddingLeft">8dp</item>
    <item name="android:paddingRight">8dp</item>
    <item name="android:paddingTop">4dp</item>
    <item name="android:paddingBottom">4dp</item>
    <item name="android:maxLines">1</item>
    <item name="android:ellipsize">end</item>
    <item name="android:textColor">?attr/colorAccent</item>
  </style>

  <style name="Ehv.GalleryDetail.Tags.Tag" parent="Ehv.GalleryDetail.Tags.Namespace">
    <item name="android:textColor">@color/primary_text_dark</item>
  </style>

</resources>
