<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="64.0dp"
        android:layout_height="64.0dp"
        android:layout_margin="8.0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8.0dp"
            android:layout_marginTop="8.0dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="16.0sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="8.0dp"
            android:layout_marginLeft="8.0dp"
            android:orientation="vertical" >

            <com.hippo.ehviewer.widget.SuperButton
                android:id="@+id/register"
                style="@style/SuperButton.Tile.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dp"
                android:singleLine="true"
                android:text="@string/register" />

            <com.hippo.ehviewer.widget.SuperButton
                android:id="@+id/login"
                style="@style/SuperButton.Tile.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/login" />
        </LinearLayout>

        <com.hippo.ehviewer.widget.SuperButton
            android:id="@+id/logout"
            style="@style/SuperButton.Tile.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="8.0dp"
            android:layout_marginLeft="8.0dp"
            android:text="@string/logout" />

        <com.hippo.ehviewer.widget.MaterialProgress
            android:id="@+id/wait"
            style="@style/MaterialProgress"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</LinearLayout>