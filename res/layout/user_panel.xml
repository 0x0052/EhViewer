<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp" >

    <LinearLayout
        android:id="@+id/user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="64dp"
            android:layout_height="64dp" />

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="@dimen/text_little_small"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <com.hippo.ehviewer.widget.MaterialProgress
        android:id="@+id/wait"
        style="@style/MaterialProgress"
        android:layout_centerInParent="true" />

    <com.hippo.ehviewer.widget.SuperButton
        android:id="@+id/login"
        style="@style/SuperButton.Tile.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_info"
        android:layout_marginTop="16dp"
        android:layout_alignParentRight="true"
        android:text="@string/login" />

    <com.hippo.ehviewer.widget.SuperButton
        android:id="@+id/register"
        style="@style/SuperButton.Tile.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_info"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@id/login"
        android:layout_marginRight="16dp"
        android:text="@string/register" />

    <com.hippo.ehviewer.widget.SuperButton
        android:id="@+id/logout"
        style="@style/SuperButton.Tile.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_info"
        android:layout_marginTop="16dp"
        android:layout_alignParentRight="true"
        android:text="@string/logout" />

</RelativeLayout>