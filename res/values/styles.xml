<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_bg</item>
        <item name="android:backgroundStacked">@drawable/ab_bg_stacked</item>
        <item name="android:backgroundSplit">@drawable/ab_bg_bottom</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleFont</item>
    </style>

    <style name="ActionBarTitleFont" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="ActionBarTabStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/ab_tab_indicator</item>
    </style>
    
    <style name="PopupMenu" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
    </style>
    
    
    <!-- Button -->
    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <style name="Button.Blue">
        <item name="android:background">@drawable/blue_bn_bg</item>
        <item name="android:textColor">@color/blue_bn_text</item>
    </style>
    
    <style name="Button.White">
        <item name="android:background">@drawable/white_bn_bg</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <style name="Button.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>
    
    <style name="Button.Small.Blue">
        <item name="android:background">@drawable/blue_bn_bg</item>
        <item name="android:textColor">@color/blue_bn_text</item>
    </style>
    
    <style name="Button.Small.White">
        <item name="android:background">@drawable/white_bn_bg</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <style name="Button.Small.Flat">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>
    
    <style name="Button.Small.Flat.Blue">
        <item name="android:background">@drawable/blue_bn_bg</item>
        <item name="android:textColor">@color/blue_bn_text</item>
    </style>
    
    <style name="Button.Small.Flat.White">
        <item name="android:background">@drawable/white_bn_bg</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <style name="ProgressBar" parent="@android:Widget.Holo.ProgressBar">
    </style>
    
    <style name="ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/progress_small</item>
        <item name="android:minWidth">16dip</item>
        <item name="android:maxWidth">16dip</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>
    
        <style name="ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/progress_large</item>
        <item name="android:minWidth">76dip</item>
        <item name="android:maxWidth">76dip</item>
        <item name="android:minHeight">76dip</item>
        <item name="android:maxHeight">76dip</item>
    </style>
    
    <style name="RefreshSmoothProgressBar" parent="SmoothProgressBar">
        <item name="spb_stroke_separator_length">0dp</item>
        <item name="spb_sections_count">2</item>
        <item name="spb_speed">1.7</item>
        <item name="spb_interpolator">spb_interpolator_acceleratedecelerate</item>
        <item name="spb_mirror_mode">true</item>
        <item name="spb_reversed">true</item>
        <item name="spb_colors">@array/refresh_colors</item>
    </style>
        
        
    <!-- Text -->
    <style name="CardTitle">
        <item name="android:textColor">@color/title_primary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
        <item name="android:lineSpacingExtra">0.0sp</item>
    </style>
    
    <style name="CardSubtitle">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/title_secondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">4.0dip</item>
        <item name="android:lineSpacingExtra">0.0sp</item>
    </style>
    
    <style name="DetailTitle">
        <item name="android:textSize">@dimen/detail_title_size</item>
        <item name="android:textColor">@color/title_primary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
        <item name="android:lineSpacingExtra">0.0sp</item>
    </style>
    
    <style name="DetailSubtitle">
        <item name="android:textSize">@dimen/detail_subtitle_size</item>
        <item name="android:textColor">@color/detail_title_secondary</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="TextTag">
        <item name="android:textSize">@dimen/detail_subtitle_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">2.0dp</item>
        <item name="android:paddingBottom">2.0dp</item>
        <item name="android:paddingLeft">8.0dp</item>
        <item name="android:paddingRight">8.0dp</item>
    </style>
    
    <style name="RatingBarSmall">
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:maxHeight">@dimen/rating_bar_small_height</item>
        <item name="android:progressDrawable">@drawable/ratingbar_small</item>
        <item name="android:minHeight">@dimen/rating_bar_small_height</item>
        <item name="android:thumb">@null</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:isIndicator">true</item>
    </style>
    
</resources>
