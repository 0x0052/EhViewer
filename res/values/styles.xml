<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@android:color/holo_blue_dark</item>
        <item name="android:backgroundStacked">@android:color/holo_blue_dark</item>
        <item name="android:backgroundSplit">@android:color/holo_blue_dark</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleFont</item>
    </style>

    <style name="ActionBarTitleFont" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_core_overflow</item>
    </style>
    
    <style name="PopupMenu" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
    </style>
    
    
    <!-- Button -->
    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
    </style>
    
    <style name="Button.Blue">
        <item name="android:background">@android:color/holo_blue_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="Button.White">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <style name="ProgressBar" parent="@android:Widget.Holo.ProgressBar">
    </style>
    
    <style name="ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/progress_small</item>
        <item name="android:minWidth">16dip</item>
        <item name="android:maxWidth">16dip</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>
    
        <style name="ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/progress_large</item>
        <item name="android:minWidth">76dip</item>
        <item name="android:maxWidth">76dip</item>
        <item name="android:minHeight">76dip</item>
        <item name="android:maxHeight">76dip</item>
    </style>
    
</resources>
